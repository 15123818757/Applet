/* pages/account/account.wxss */
.header{
  width: 100%;
  padding: 15px 0;
}
.header image{
    display: block;
    margin: auto;
    border-radius: 50%;
    width: 80px;
    height: 80px;
}
.header text{
  display: block;
  width: 100%;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 0.85rem;
  line-height: 40px;
  color: #353535;
}
.nav>view{
  width: 100%;
  height: 50px;
  padding: 5px 3%;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
  line-height: 40px;
}
.nav>view:nth-of-type(1){
  border-top: 1px solid #e5e5e5;
}
.nav>view image{
  display: inline-block;
  vertical-align: middle;
  width: 20px;
  height: 20px;
}
.nav>view text{
  font-family: "微软雅黑";
  font-size: 0.85rem;
  line-height: 40px;
  color: #646464;
}
.nav>view image:nth-of-type(1){
  margin-right: 5%;
  transform: translateY(-2px);
}
.nav>view image:nth-of-type(2){
  width: 12px;
  float: right;
  margin-right: 3%;
  margin-top: 10px;
}
.bot{
  position: absolute;
  bottom: 0;
  width: 100%;
  left: 0;
}
.bot text{
  display: block;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 0.7rem;
  color: #bfbfbf;
}
.bot text:nth-of-type(2){
  font-size: 0.7rem;
 padding-bottom: 10px;
  }