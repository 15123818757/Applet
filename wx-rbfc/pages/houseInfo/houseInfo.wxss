/* pages/houseInfo/houseInfo.wxss */
page{
  background: #e5e5e5;
}
.swiper{
  display: block;
  width: 100%;
  background: white;
  height: 210px;
}
.swiper swiper-item{
  overflow: hidden;
}
.swiper image{
  display: block;
  width: 100%;
  height: 100%;
  margin: auto;
}

.houseTitle{
  background: white;
  padding: 2% 3%;
  text-align: left;
  font-family: "微软雅黑";
  box-sizing: border-box; 
  display: block;
  line-height: 23px;
  color: #353535;
  font-size: 1rem;
  font-weight: bold;
}
.info,.location{
  background: white;
  margin-top: 10px;
}

.info view{
  display: block;
  width: 100%;
  background: white;
  padding-left: 3%;
  box-sizing: border-box;
  position: relative;
}
.info view:last-child{
  padding-bottom: 10px;
}
.top view text:nth-of-type(1){
  position: absolute;
}

.top view text:nth-of-type(2){
  width: 75%;
  margin-left: 20%;
}
.info text{
  display: inline-block;
  font-family: "微软雅黑";
  font-size: 0.9rem;
  line-height: 30px;
  color: #353535;
  vertical-align: top;
  padding-right: 3%;
  box-sizing: border-box;
}
.info>view:nth-of-type(1){
  display: block;
  font-family: "微软雅黑";
  font-size: 0.9rem;
  color: #327ceb;
  border-bottom: 1px solid #e5e5e5;
  line-height: 40px;
  padding-left: 3%;
  box-sizing: border-box;
  font-weight: bold;
}
.footer{
  position: fixed;
  width: 100%;
  height: 40px;
  line-height: 40px;
  color: white;
  text-align: center;
  left: 0;
  bottom: 0;
  background: #327ceb;
  font-family: "微软雅黑";
  font-size: 0.9rem;
  z-index: 10;
}

.zxView{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  z-index: 9;
}
.zxView>view{
  position: absolute;
  width: 100%;
  bottom: 40px;
  left: 0;
}
.zxView>view view,.zxView>view button{
  font-family: "微软雅黑";
  font-size: 0.9rem;
  text-align: center;
  line-height: 40px;
  background: white;
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
}
.zxView>view button{
  border: none;
}
.zxView>view button::after{
  border: none;
}

.er{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  background: white;
}
.er text{
  font-family: "微软雅黑";
  display: block;
  text-align: center;
  color: #353535;
  font-size: 0.9rem;
}
.er text:nth-of-type(2){
  color: #b9b9b9;
  font-size: 0.8rem;
  margin-top: 5px;
}
.er image{
  display: block;
  margin: auto;
  
}
.er>image{
  width: 250px;
  height: 250px;
  margin-bottom: 5%;
}
.er view{
  position: absolute;
  bottom: 10px;
  width: 100%;
  text-align: center;
}
.er view image{
  display: inline-block;
  width: 25px;
  height: 25px;
}
.er>view:nth-of-type(1){
  position: static;
  margin-bottom: 5%;
  margin-top: 15%;
}
.er>view:nth-of-type(1) view{
  position: static;
  display: inline-block;
  width: auto;
}
.er>view:nth-of-type(1) view:nth-of-type(2){
  vertical-align: top;
}
.er>view:nth-of-type(1) view:nth-of-type(1) image{
  width: 50px;
  height: 50px;
}
.er>view:nth-of-type(1) view:nth-of-type(2) text{
  display: inline-block;
  padding-left: 10px;
  box-sizing: border-box;
  line-height: 20px;
}
.er>view:nth-of-type(1) view:nth-of-type(2) text:nth-of-type(1){
  margin-top: 5px;
}
.er>view:nth-of-type(1) view:nth-of-type(2) text:nth-of-type(2){
  display: block;
  text-align: left;
}
.er>view:nth-of-type(1) view:nth-of-type(2) image{
  width: 15px;
  height: 15px;
  display: inline-block;
  transform: translateY(2px);
}



@media only screen and (max-width: 360px) {
  .er>view:nth-of-type(1){
    margin-bottom: 3%;
    margin-top: 5%;
  }
}

.box{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0,0.5);
  z-index: 99;
  top: 0;
  left: 0;
}
.box>view{
  position: absolute;
  top: 45%;
  width: 35%;
  transition: 0.5s;
  left: 35%;
  background: white;
  border-radius: 5px;
}
.box>view text{
  display: block;
  line-height: 30px;
  font-family: "微软雅黑";
  font-size: 0.9rem;
  text-align: center;
  width: 100%;

}
.box>view text:nth-of-type(2){
  border-top: 1px solid lightgray;
}