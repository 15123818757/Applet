/* pages/collect/collect.wxss */
.citiBigBox{
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  overflow: hidden;
}
.cityBox{
  padding: 2% 3%;
  box-sizing: border-box;
  width: 100%;
  transition: 0.5s;
  height: 125px;
  position: relative;
  border-bottom: 1px solid #e5e5e5;
}
.cityBox image{
  display: inline-block;
  height: 104px;
  width: 132px;
  float: left;
}
.cityBox>view{
  display: block;
  max-width: 60%;
  float: left;
  position: relative;
}
.cityBox>view text{
  width:100%; 
  text-align: left;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  height: 23px;
   -webkit-line-clamp: 1;
  font-family: "微软雅黑";
  padding-left:10px;
  box-sizing: border-box; 
  display: block;
  line-height: 23px;
  color: #353535;
  font-size: 0.9rem;
  font-weight: bold;
}
.cityBox>view text:nth-of-type(3){
    color: #39b639;
}
.cityBox>view text:nth-of-type(4){
  /*color: #39b639;
  margin-top: 8px;*/
}
.cityBox>view:nth-of-type(2){
  position: absolute;
  bottom: 10px;
  right: 3%;
  border: 1px solid #327ceb;
  padding: 5px 10px;
  color: #327ceb;
  font-size: 0.8rem;
  font-family: "微软雅黑";
}

.citiBigBox text{
  display: block;
  color: #888888;
  text-align: center;
  font-size: 0.9rem;
  font-family: "微软雅黑";
  line-height: 40px;
}
.cityBox>view view text{
  display: inline-block;
  width: auto;
  color: #888888;
  font-size:0.8rem;
  margin-top: 10px;
  line-height: 20px; 
}
.del{
  position: absolute !important;
  width: 100px;
  background: #ff5e5e;
  color: white;
  line-height: 125px;
  text-align: center;
  top: 0;
  right: -100px;
}

.zxView{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  z-index: 10;
}
.zxView>view{
  position: absolute;
  width: 100%;
  bottom: 0px;
  left: 0;
}
.zxView>view view,.zxView>view button{
  font-family: "微软雅黑";
  font-size: 0.9rem;
  text-align: center;
  line-height: 40px;
  background: white;
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
}
.zxView>view button{
  border: none;
}
.zxView>view button::after{
  border: none;
}
.er{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 10;
  background: white;
}
.er text{
  font-family: "微软雅黑";
  display: block;
  text-align: center;
  color: #353535;
  font-size: 0.9rem;
}
.er text:nth-of-type(2){
  color: #b9b9b9;
  font-size: 0.7rem;
  margin-top: 5px;
}
.er image{
  display: block;
  margin: auto;
  
}
.er>image{
  width: 250px;
  height: 250px;
  margin-bottom: 5%;
}
.er view{
  position: absolute;
  bottom: 10px;
  width: 100%;
  text-align: center;
}
.er view image{
  display: inline-block;
  width: 25px;
  height: 25px;
}
.er>view:nth-of-type(1){
  position: static;
  margin-bottom: 5%;
  margin-top: 15%;
}
.er>view:nth-of-type(1) view{
  position: static;
  display: inline-block;
  width: auto;
}
.er>view:nth-of-type(1) view:nth-of-type(2){
  vertical-align: top;
}
.er>view:nth-of-type(1) view:nth-of-type(1) image{
  width: 50px;
  height: 50px;
}
.er>view:nth-of-type(1) view:nth-of-type(2) text{
  display: inline-block;
  padding-left: 10px;
  box-sizing: border-box;
  line-height: 20px;
}
.er>view:nth-of-type(1) view:nth-of-type(2) text:nth-of-type(1){
  margin-top: 5px;
}
.er>view:nth-of-type(1) view:nth-of-type(2) text:nth-of-type(2){
  display: block;
  text-align: left;
}
.er>view:nth-of-type(1) view:nth-of-type(2) image{
  width: 15px;
  height: 15px;
  display: inline-block;
  transform: translateY(2px);
}
.noneCollect{
  display: block;
  text-align: center;
  margin-top: 150px;
  font-family: "微软雅黑";
  font-size: 0.7rem;
  color: #bfbfbf;
}


@media only screen and (max-width: 360px) {
  .er>view:nth-of-type(1){
    margin-bottom: 3%;
    margin-top: 5%;
  }
}