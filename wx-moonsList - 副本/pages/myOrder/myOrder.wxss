/* pages/myOrder/myOrder.wxss */

.nav {
    position: relative;
    border-bottom: 1px solid #ccc;
    background: white;
}

.nav view {
    display: inline-block;
    width: 20%;
    line-height: 50px;
    color: black;
    font-size: 0.9rem;
    text-align: center;
    font-family: "微软雅黑";
}

checkbox {
    display: inline-block;
}

.nav view:last-child {
    height: 3px;
    position: absolute;
    bottom: 0;
    left: 0;
    transition: 0.5s;
}

.nav view:last-child text {
    display: block;
    width: 80%;
    margin: auto;
    height: 3px;
    background: #000740;
}

.goodsInfo {
    padding: 15px;
    box-sizing: border-box;
    background: white;
    padding-bottom: 0;
}

.goodsInfo>view image {
    display: inline-block;
    width: 50px;
    height: 66.5px;
    margin: 0 3%;
}

.goodsInfo>view {
    width: 100%;
    text-align: left;
    display: inline-block;
    position: relative;
    padding-bottom: 3%;
}

.info {
    width: 75%;
    display: inline-block;
    text-align: left;
    vertical-align: top;
    height: 70px;
    position: relative;
}

.info text {
    text-align: left;
    display: block;
    color: black;
    font-size: 0.9rem;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.info>view {
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: right;
    width: 100%;
}

.info>view text {
    font-size: 0.8rem;
    color: #666;
    display: inline-block;
}

.info>view text:nth-of-type(2) {
    color: #fcb01d;
}

.peisong {
    background: white;
    padding: 15px;
    border-top: 1px solid #d9d9d9;
    border-bottom: 1px solid #d9d9d9;
    padding-bottom: 10px;
    text-align: left;
}

.checkbox .goodsInfo {
    margin-bottom: 5%;
}

checkbox {
    transform: scale(0.7);
}

.peisong text {
    color: #666;
    font-size: 0.8rem;
    padding: 0 5px;
}

.peisong text:nth-of-type(2) {
    color: #ff0303;
    float: right;
}

.price {
    background: white;
    padding: 5% 0;
    box-sizing: border-box;
}

.content>view {
    margin: 3% 0;
}

.content {
    text-align: center;
}

.content>text {
    display: inline-block;
    text-align: center;
    color: black;
    padding: 2% 4%;
    border-radius: 3px;
    border: 1px solid lightgray;
    background: white;
    margin-bottom: 3%;
}

.hideBox {
    height: 60px;
}

.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 60px;
    width: 100%;
    background: white;
    border-top: 1px solid #cecece;
}

.bottom>checkbox-group {
    display: inline-block;
    color: #676767;
    font-size: 0.8rem;
    line-height: 60px;
    font-family: "微软雅黑";
}

.bottom>checkbox-group checkbox {
    padding-left: 15px;
}

.bottom>view {
    display: inline-block;
    width: 65%;
    text-align: right;
    float: right;
}

.bottom>view view {
    display: inline-block;
    color: #666;
    line-height: 60px;
    font-size: 0.8rem;
    font-family: "微软雅黑";
}

.bottom>view view:nth-of-type(1) text {
    font-size: 0.8rem;
    line-height: 60px;
    color: #fcb01d;
    padding-right: 20px;
}

.bottom>view view:nth-of-type(2) {
    height: 60px;
    width: 70px;
    font-size: 0.8rem;
    color: white;
    line-height: 60px;
    text-align: center;
    background: #ed5249;
}

.pay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.payBox {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #f0f0f2;
}

.payBox>view {
    padding: 0 5%;
    background: white;
}

.payBox>view view {
    display: inline-block;
    height: 40px;
    line-height: 40px;
}

.payBox>view:nth-of-type(1) {
    border-bottom: 1px solid #f5f5f5;
}

.payBox>view text {
    display: inline-block;
    line-height: 40px;
    font-size: 0.8rem;
    color: #666;
}

.payBox>view text:nth-of-type(1) {
    float: right;
    color: #acacac;
}

.payBox>button {
    background: #ec5248;
    display: block;
    width: 80%;
    margin: 5% auto;
    color: white;
    font-size: 0.9rem;
}

.tPrice {
    margin-top: 3%;
    background: white;
    padding: 5% 0;
}

.tPrice>view {
    display: block !important;
    line-height: 50px;
    color: #666;
    font-size: 0.8rem;
    text-align: center !important;
}

.tPrice>view text {
    float: none !important;
    color: #fe0000 !important;
    font-weight: bold;
    font-size: 0.9rem;
    margin: 0 2%;
}

.wuliuText {
    color: #b3b3b3 !important;
    border: 1px solid #b3b3b3;
    padding: 1% 2% !important;
    transform: translateY(-7px);
}

.wlBox {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    top: 0;
    left: 0;
}

.wl {
    margin-top: 45px;
    background: white;
    padding: 5% 3%;
    position: relative;
    padding-top: 15px;
}

.wl>image {
    display: block;
    position: absolute;
    right: 3%;
    top: 15px;
    width: 18px;
    height: 18px;
}

.wxTop {
    margin-top: 15px;
}

.wxTop>image {
    display: inline-block;
    width: 100px;
    height: 100px;
}

.wxTop>view {
    height: 100px;
    display: inline-block;
    vertical-align: top;
    width: 60%;
}

.wxTop>view text {
    display: block;
    font-size: 0.8rem;
    line-height: 1.4rem;
    color: #898989;
    text-align: left;
    padding-left: 5%;
}

.wxTop>view text:nth-of-type(1) {
    font-weight: bold;
}

.wxTab {
    margin: 5% 0;
}

.wxTab>view {
    margin: 5% 0;
}

.wxTab>view text {
    display: inline-block;
    width: 33.3%;
    text-align: center;
    color: #9d9d9d;
    font-size: 0.8rem;
    line-height: 1.2rem;
    vertical-align: top;
}

.wxTab>view view {
    display: inline-block;
    width: 33.33%;
    vertical-align: top;
    text-align: center;
}

.wxTab>view view text {
    display: block;
    width: 100%;
}

.wxTab>view text text {
    display: block;
    text-align: center;
}

.wxTab>view:nth-of-type(1) text {
    color: #5aa4ff;
    font-weight: bold;
}

.wl {
    text-align: center;
}

.wl>text {
    display: inline-block;
    padding: 2% 4%;
    border: 1px solid #9d9d9d;
    color: #9d9d9d;
    font-size: 0.7rem;
    margin: 3% 0;
}

@media only screen and (max-width:345px) {
    .wxTop>view text {
        line-height: 1.5rem;
    }
}

@media only screen and (min-width:400px) and (max-width:450px) {
    .wxTop>view text {
        line-height: 1.3rem;
    }
}
