/* pages/pay/pay.wxss */
page{background: white;}
.box{
  width: 90%;
  box-sizing: border-box;
  margin: 8% auto;
  box-shadow: 0 0 10px lightgray;
  padding: 3% 0;
}
.box>image{display: block;margin: 3% auto;}
.box>image:nth-of-type(1){width: 100px;height: 27px;}
.box>image:nth-of-type(2){width: 240px;height: 240px;}
.box>image:nth-of-type(3){width: 40px;height: 40px;}
.box>text{
  display: block;
  text-align: center;
  font-size: 0.7rem;
  color: #9b9b9b;
  line-height: 1.5rem;
}
button{
  display: block;
  color: white;
  width: 90%;
  font-size: 0.9rem;
  background: #ed5249;
  margin: 5% auto;
}