/* pages/getPhoto/getPhoto.wxss */
page{background: white;}
.content{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 10%;
    box-sizing: border-box;
}
.top{
    opacity: 0;
    height: 85%;
    box-shadow: 0px 0px 10px #cdcdcd;
    border-radius: 5px;
    position: relative;
}

.top>view:nth-of-type(1){
    overflow: hidden;
    max-height: 45%;
}
.top>view:nth-of-type(1) image{
    width: 100%;
}
.top>text{
    font-size: 1rem;
    line-height: 1.5rem;
    text-align: left;
    padding-left: 5%;
    box-sizing: border-box;
    display: block;
}
.top>text:nth-of-type(1){
    margin-top: 8%;
    color: #515151;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:1;
}
.top>text:nth-of-type(2){
    color: #fcb01d;
}
.logo{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-top: 1px solid #eeeeee;
    padding: 5%;
    box-sizing: border-box;
}
.logo image{
    width: 45%;
}
.logo view{
    float: right;
    width: 45%;
    text-align: center;
}
.logo view image{
    width: 75%;
}
.logo view text{
    color: #9e9e9e;
    display: block;
    font-size: 0.8rem;
    line-height: 1.5rem;
}
.buttom{
    display: block;
    color: white;
    font-size: 1rem;
    background: #ed5249;
    border-radius: 5px;
    line-height: 2.7rem;
    text-align: center;
    margin-top: 10%;
}

.myCan{
    display: block;
    z-index: 10;
    margin-left: 10%;
    margin-top: 10%;
    box-shadow: 0px 0px 10px #cdcdcd;
}