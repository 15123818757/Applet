/* pages/login/login.wxss */
page{background: white;}
.content{
    width: 80%;
    /* box-shadow: 0 0 10px lightgray; */
    padding: 3%;
    margin: auto;
    margin-top: 20%;
    text-align: center;
}
.content>image{
    display: inline-block;
    width: 100px;
    height: 100px;
    margin-bottom: 5%;
}
.box{
    margin: 4% 0;
    position: relative;
    border: 1px solid lightgray;
    box-sizing: border-box;
    height: 45px;
    border-radius: 5px;
    overflow: hidden;
}
.box>image{
    display: block;
    position: absolute;
    left: 3%;
    top: 20%;
    width: 25px;
    height: 25px;
    z-index: 10;
}
.box>input{
    display: block;
    width: 90%;
    border: none;
    outline: lightblue;
    font-size: 0.8rem;
    line-height: 45px;
    height: 45px;
    color: #666666;
    text-align: left;
    padding-left: 50px;
    box-sizing: border-box;
    font-family: "微软雅黑";
}
.pClass{
    font-size: 0.8rem;
    font-family: "微软雅黑";
}
.login{
    margin-top: 0%;
    font-size: 0.8rem;
    box-sizing: border-box;
    border: none;
    outline: none;
    overflow:visible;
}