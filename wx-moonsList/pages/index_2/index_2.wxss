/**index.wxss**/
.banner{margin-top: -5px;}
.login{
  background: white;
  text-align: center;
  padding: 4% 5%;
  box-sizing: border-box;
}
.login text{
  display: block;
  width: 40%;
  border: 1px solid #666666;
  padding: 2% 8%;
  margin: auto;
  color: #666666;
}
.loginAfter{
  background: white;
  text-align: center;
  padding-top: 2%;
}
.loginAfter image{
  width: 70%;
  height: 56px;
}
.loginAfter>text{
  display: block;
  line-height: 1rem;
}
.loginAfter>view{
  background: #686a82;
  padding: 2% 0;
}
.loginAfter>view text{
  display: inlinessadsdas
  width: 50%;
  box-sizing: border-box;
  color: white;
}
.loginAfter>view text:nth-of-type(1){
  border-right: 1px solid white;
}
.content{margin-bottom: 3%;}
.content>view{
  width: 50%;
  float: left;
  text-align: center;
  padding: 4%;
  background: white;
  box-sizing: border-box;
  border-right: 1px solid #d9d9d9;
  border-bottom: 1px solid #d9d9d9;
  position: relative;
}
.content>view:nth-of-type(2n){border-right: none;}
.content>view image{
  display: inline-block;
  width: 32px;
  height: 32px;
}
.content>view text{
  color: black;
  line-height: 1rem;
  display: block;
  text-align: center;
}
.contact{
  display: block;
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  top: 40%;
  left: 0;
}
.content>view text:nth-of-type(2){color: #999999;font-size: 0.65rem;}
.banner{height: 209px;}
@media only screen and (min-width: 100px) and (max-width: 340px){
	.top{height: 60px;}
  .banner{height: 180px;}
  .banner image{height: 180px;}
  .loginAfter image{height: 42px;}
  .content>view{padding: 3%;}
  .content>view text:nth-of-type(2){font-size: 0.6rem;}
}
@media only screen and (min-width: 375px) and (max-width: 500px){   
   .banner{height: 200px;}
  .banner image{height: 200px;}
}