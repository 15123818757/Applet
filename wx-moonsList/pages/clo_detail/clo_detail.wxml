<!--pages/clo_detail/clo_detail.wxml-->
<!-- banner -->
<swiper class="banner" autoplay="true" indicator-dots="true">
  <block>
    <swiper-item>
      <image mode='widthFix' src="../img/clo_detail_1.jpg"></image>
    </swiper-item>
     <swiper-item>
      <image mode='widthFix' src="../img/clo_detail_2.jpg"></image>
    </swiper-item>
     <swiper-item>
      <image mode='widthFix' src="../img/clo_detail_1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image mode='widthFix' src="../img/clo_detail_2.jpg"></image>
    </swiper-item>
  </block>
</swiper>
<!-- 基本信息 -->
<view class="info">
    <image src='../img/share.png' class="share" mode='widthFix' bindtap='showShare'></image>
  <text>修身拉链外套</text>
    <view>
      <text>￥318.00</text>
    </view>
    <text>款号：<text>00353009</text></text>
</view>

<!-- 选项 -->
<view class="option">
  <view class="box">
    <!-- 颜色 -->
    <view>颜色：</view>
    <view>
      <view bindtap="choseColor_1" class="{{color_1}}">黑色</view>
      <view bindtap="choseColor_2" class="{{color_2}}">蓝色</view>
      <view bindtap="choseColor_3" class="{{color_3}}">红色</view>
      <view bindtap="choseColor_4" class="{{color_4}}">白色</view>
      <view bindtap="choseColor_5" class="{{color_5}}">黄色</view>
    </view>
  </view>
  <!-- 尺码 -->
   <view class="box size">
    <view>尺码：</view>
    <view>
      <view bindtap="choseSize_1" class="{{xize_1}}">170/88A(XS)</view>
      <view bindtap="choseSize_2" class="{{xize_2}}">175/92A(S)</view>
      <view bindtap="choseSize_3" class="{{xize_3}}">180/96A(M)</view>
      <view bindtap="choseSize_4" class="{{xize_4}}">185/104A(l)</view>
      <view bindtap="choseSize_5" class="{{xize_5}}">190/108A(XL)</view>
    </view>
  </view>
  <!-- 数量 -->
  <view class="box num">
    <view>数量：</view>
    <view>
      <view bindtap="jian">-</view>
      <view>{{num}}</view>
      <view  bindtap="jia">+</view>
    </view>
  </view>
</view>

<!-- 详细信息 -->
<view class="detail">
  <text bindtap="showImg" style="display:{{textDis}}">点击查看商品详情</text>
  <image style="display:{{imgDis}}" src="../img/clo_detail_1.jpg"></image>
  <image style="display:{{imgDis}}" src="../img/clo_detail_2.jpg"></image>
  <image style="display:{{imgDis}}" src="../img/clo_detail_3.jpg"></image>
</view>

<view style="height:60px"></view>
<!-- 购买 -->
<view class="buy">
  <button bindtap="addCart">加入购物车</button>
  <button bindtap="goBuy">立即购买</button>
</view>


<!--  分享框  -->
<view class='shareBox' style='display:{{shareBoxDis}}'>
    <view class='shareCon'>
        <view>
            <view>
                <image src='../img/share_1.png' mode='widthFix'></image>
                <text>发送给朋友</text>
                <button open-type='share'></button>
            </view>
            <view bindtap='getPhpoto'>
                <image src='../img/share_2.png' mode='widthFix'></image>
                <text>分享生成图片</text>
            </view>
        </view>
        <text bindtap='hideShare'>取消</text>
    </view>
</view>