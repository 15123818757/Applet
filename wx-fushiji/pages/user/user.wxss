/* pages/user/user.wxss */
.top{
  padding: 6%;
  text-align: center;
  background: #ff6666;
}
.top>image{display: inline-block;border-radius: 50%;width: 80px;height: 80px;margin-bottom: 5%;}
.top>text{display: block;text-align: center;color: white;}
.collect{padding: 3%;padding-top: 0;}
.box{border-bottom: 1px solid #f1f1f1;position: relative;}
.box>image:nth-of-type(1){
  display: inline-block;
  width: 20px;
  vertical-align: middle;
  height: 20px;
  transform: translateY(-3%);
}
.box>image:nth-of-type(2){
  width: 10px;
  height: 20px;
  position: absolute;
  right: 3%;
  top: 13px;
}
.box>text{display: inline-block;line-height: 45px;padding-left: 3%;font-size: 0.9rem;}
.bot{
  position: absolute;
  bottom: 0;
  width: 100%;
  left: 0;
  padding-bottom: 10px;
}
.bot text{
  display: block;
  text-align: center;
  font-family: "微软雅黑";
  font-size: 0.7rem;
  line-height: 1rem;
  color: #bfbfbf;
}
.bot text:nth-of-type(2){font-size: 0.6rem;}

@media only screen and (max-width:325px){
  .box>image:nth-of-type(1){width: 18px;height: 18px;}
}

@media only screen and (min-width:375px) and (max-width:450px){
  .box>image:nth-of-type(1){width: 25px;height: 25px;}
  .box>image:nth-of-type(2){top: 20px;}
  .box>text{line-height: 60px;}
}