/* pages/list/list.wxss */
.content{padding: 0 3%;text-align: center;}
.content>text{
  display: inline-block;
  padding: 2% 3%;
  background: white;
  color: black;
  border-radius: 3px;
  margin: 3% 0;
  border:1px solid lightgray;
}
.box{padding: 3% 0;border-bottom: 1px solid #f1f1f1;}
.box>image{
  display: inline-block;
  width: 120px;
  height: 87px;
}
.box>view{
  width: 60%;
  display: inline-block;
  vertical-align: top;
}
.box>view text{display: block;padding-left: 5%;text-align: left;} 
.box>view text:nth-of-type(1){
  font-weight: bold;
  font-size: 1.2em;
  margin-bottom: 3%;
  overflow: hidden;
  text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.box>view text:nth-of-type(2){
  font-size: 0.9rem;
  min-height: 36px;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #666666;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 20px;
}
.box>view view{padding-left: 5%;font-size: 0.7rem;color: #adadad;margin-top: 3%;text-align: left;}
.box>view view image{
  width: 12px;
  height: 12px;
  margin: 0 5%;
}
.box>view view image:nth-of-type(1){margin-left: 0;}

@media only screen and (max-width:325px){
  .box>view view image{width: 10px;height: 10px;}
}

@media only screen and (min-width:375px) and (max-width:450px){
  .box>image{width: 140px;height: 102px;}
} 
