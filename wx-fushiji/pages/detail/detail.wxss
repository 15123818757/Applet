/* pages/detail/detail.wxss */
.content{padding: 0 3%;}
.hideView{height: 52px;}
.video{
  width: 100%;
}
.buttom{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: white;
}
.buttom>view{
  position: relative;
  width: 33.33%;
  vertical-align: top;
  text-align: center;
  padding: 3% 0;
  display: inline-block;
  border-top: 1px solid #eeeeee;
  border-right: 1px solid #eeeeee;
}
.buttom>view button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  left: 0;
  top: 0;
}
.buttom>view:last-child{border-right: 0;}
.buttom>view image{
  width: 23px;
  height: 23px;
  transform: translateY(6px);
}
.buttom>view text{color: #ff7272;display: inline-block;line-height: 23px;margin-left:8%; }
.title>view{border-bottom: 1px solid #eeeeee;}
.title>view:nth-of-type(1){
  line-height: 60px;
  font-size: 0.9rem;
  color: #ff7272;
  text-align: center;
  font-weight: bold;
}
.title>view text{
  display: block;
  text-align: left;
  margin: 5% 0;
  font-size: 0.9rem;
  color: #737373;
  line-height: 25px;
}
.stuff>view{text-align: center;}

.setp>view{text-align: center;}

.redTitle text{
  display: inline-block;
  line-height: 60px;
  font-size: 0.9rem;
  color: #ff7272;
  text-align: center;
  font-weight: bold;
}
.redTitle view{
  display: inline-block;
  height: 1px;
  width: 6%;
  background: #ff7272;
  transform: translateY(-5px);
  margin: 0 3%;
}
.stuff>view:nth-of-type(2) view{
  width: 75%;
  margin: auto;
}
.stuff>view:nth-of-type(2) view{
  border-bottom: 1px solid #eeeeee;
  text-align: left;
}
.stuff>view:nth-of-type(2) view text{
  line-height: 50px;
}
.stuff>view:nth-of-type(2) view text:nth-of-type(2){
  float: right;
}
.setp{text-align: center;border-bottom: 1px solid #eeeeee;padding-bottom: 5%;}
.setp>text{
  display: block;
  text-align: left;
  line-height: 25px;
  font-size: 0.9rem;
  color: #737373;
}
.setp>image{
  display: inline-block;
  width: 320px;
  height: 145.45px;
}
.product{text-align: center;}

.scroll{
  white-space: nowrap;
  width: 100%;
}
.proBox{
  position: relative;
  display: inline-block;
  width: 100px;
  height: 92px;
  margin: 0 1.5%;
}
.proBox image{
  display: block;
  width: 100px;
  height: 92px;
}
.proBox>view{
  display: block;
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 0.7rem;
  line-height: 20px;
  padding: 5%;
  box-sizing: border-box;
  overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.pingL{text-align: center;}
.pingL>text{
  display: inline-block;
  margin: 5% 0;
  border-radius: 3px;
  background: white;
  font-size: 0.8rem;
  color: black;
  padding: 2% 4%;
  border: 1px solid lightgray;
}
.plBox{position: relative;margin-bottom:5%;text-align: left;}
.plBox>image{
  display: inline-block;
  width: 40px;
  height: 40px;
  vertical-align: top;
}
.plBox>view{
  display: inline-block;
  width: 88%;
}
.plBox>text{
  position: absolute;
  color: #9a9a9a;
  right: 0%;
  top: 3%;
  font-size: 0.8rem;
}
.plBox>view text{display: block;text-align: left;padding-left: 3%;font-size: 0.8rem;
}
.plBox>view text:nth-of-type(1){color: #353535;margin-bottom: 5%;font-size: 0.9rem;}
.plBox>view text:nth-of-type(2){color: #666666;line-height: 20px;font-size: 0.8rem;}

.bigPL{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 20;
}
.bigPL>view{
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  background: white;
  box-shadow: 0 0 10px gray;
  padding: 5%;
  padding-bottom: 0;
}
.bigPL>view text{
  display: block;
  text-align: center;
  line-height: 40px;
  color: #ff7272;
  background: white;
  font-size: 0.9rem;
}
.bigPL>view textarea{
  display: block;
  width: 100%;
  height: 150px;
  background: #f1f1f1;
  color: black;
  line-height: 25px;
  padding: 3%;
  box-sizing: border-box;
}

.pClass{
  color: #cccccc;
  line-height: 25px;
}
.topImg{
    display: block;
    width: 100% !important;
    height: 150px;
    margin: auto; 
}

@media only screen and (max-width:325px){
  .setp>image{width: 280px;height: 127px;}
  .plBox>view{width: 85%;}
}

@media only screen and (min-width:370px) and (max-width:420px){
  .setp>image{width: 350px;height: 160px;}
  .topImg{height: 180px;}
}