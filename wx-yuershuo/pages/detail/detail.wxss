/* pages/detail/detail.wxss */
.content{padding: 0 3%;}
.hideView{height: 52px;}
.video{
  width: 100%;
}
.buttom{
  position: fixed; 
  left: 0;
  bottom: 0;
  width: 100%;
  background: white;
}
.buttom>view{
  position: relative;
  width: 33.33%;
  vertical-align: top;
  text-align: center;
  padding: 3% 0;
  display: inline-block;
  border-top: 1px solid #eeeeee;
  border-right: 1px solid #eeeeee;
}
.buttom>view button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
  left: 0;
  top: 0;
}
.buttom>view:last-child{border-right: 0;}
.buttom>view image{
  width: 23px;
  height: 23px;
  transform: translateY(6px);
}
.buttom>view text{color: #33d688;display: inline-block;line-height: 23px;margin-left:8%; }

.redTitle text{
  display: inline-block;
  line-height: 60px;
  font-size: 0.9rem;
  color: #33d688;
  text-align: center;
  font-weight: bold;
}
.redTitle view{
  display: inline-block;
  height: 1px;
  width: 6%;
  background: #33d688;
  transform: translateY(-5px);
  margin: 0 3%;
}

.product{text-align: center;}

.scroll{
  white-space: nowrap;
  width: 100%;
  text-align: left;
}
.proBox{
  position: relative;
  display: inline-block;
  width: 100px;
  height: 92px;
  margin: 0 1.5%;
}
.proBox image{
  display: block;
  width: 100px;
  height: 92px;
}
.proBox>view{
  display: block;
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 0.6rem;
  line-height: 20px;
  padding: 5%;
  box-sizing: border-box;
  overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.pingL{text-align: center;}
.pingL>text{
  display: inline-block;
  margin: 5% 0;
  border-radius: 3px;
  background: white;
  font-size: 0.8rem;
  color: black;
  padding: 2% 4%;
  border: 1px solid lightgray;
}
.plBox{position: relative;margin-bottom:5%;text-align: left;}
.plBox>image{
  display: inline-block;
  width: 40px;
  height: 40px;
  vertical-align: top;
}
.plBox>view{
  display: inline-block;
  width: 85%;
}
.plBox>text{
  position: absolute;
  color: #9a9a9a;
  right: 0%;
  top: 3%;
  font-size: 0.8rem;
}
.plBox>view text{display: block;text-align: left;padding-left: 3%;}
.plBox>view text:nth-of-type(1){font-size: 0.9rem;color: #353535;margin-bottom: 5%;}
.plBox>view text:nth-of-type(2){font-size: 0.75rem;color: #666666;line-height: 20px;}

.bigPL{
  position: fixed;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 20;
}
.bigPL>view{
  position: absolute;
  width: 100%;
  left: 0;
  bottom: 0;
  background: white;
  box-shadow: 0 0 10px gray;
  padding: 5%;
  padding-bottom: 0;
}
.bigPL>view text{
  display: block;
  text-align: center;
  line-height: 40px;
  color: #33d688;
  background: white;
  font-size: 0.9rem;
}
.bigPL>view textarea{
  display: block;
  width: 100%;
  height: 150px;
  background: #f1f1f1;
  color: black;
  line-height: 25px;
  padding: 3%;
  box-sizing: border-box;
}

.pClass{
  color: #cccccc;
  line-height: 25px;
}

.title text{padding-left: 3%;margin: 4% 0;display: block;
  text-align: left;}
.title text:nth-of-type(1){
  color: #353535;
  font-size: 1.1rem;
    margin-bottom: 0%;
}
.title text:nth-of-type(2){
  color: #b3b3b3;
  font-size: 0.7rem;
  margin-top: 2%;
}

.tAndImg{border-bottom: 1px solid #eeeeee;}
.tAndImg>text,.tAndImg>p{
  display: block;
  color: #666666;
  line-height: 1.6rem;
  margin: 5% 0;
  text-align: left;
}
.tAndImg>image{
  display: block;
  width: 100%;
  height: 200px;
  margin: 2% auto;
}
.topImg{
    display: block;
    width: 100%;
    height: 180px;
    margin: auto;
}
@media only screen and (max-width:325px){
  .tAndImg>image{height: 176px;}
  .topImg{
      width: 300px;
      height: 160px;
  }
}

@media only screen and (min-width:370px) and (max-width:420px){
  .tAndImg>image{height: 205px;}
  .topImg{
      width: 370px;
      height: 200px;
  }
} 


@import "/wxParse/wxParse.wxss";