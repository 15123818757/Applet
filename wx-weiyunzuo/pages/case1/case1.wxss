/* pages/case1/case1.wxss */
/**app.wxss**/
page{
    opacity: 1;
}
.back{
    width: 50px;
    height: 30px;
    display: block;
    position: fixed;
    z-index: 999;
}
.cTop{
    width: 100%;
    background: url(http://139.199.166.102/images/img/caseBack.png) top left no-repeat;
    background-size: 100% 100%;
    padding-bottom: 65px;
    padding-top: 15px;
    text-align: center;
    font-family: "微软雅黑";
}
.cTop image{
    width: 50px;
    height: 50px;
}
.cTop text{
    display: block;
    width: 100%;
    text-align: center;
    font-size: 7px;
}
.cTop text:nth-of-type(1){
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 10px;
}
.cTop text:nth-of-type(2){
    margin-bottom: 5px;
}
.cTop text:nth-of-type(3){
    margin-bottom: 5px;
}


.cBlockImg{
    display: block;
    width: 100%;
    text-align: center;
    margin-top: -50px;
}
.cBlockImg image{
    width: 90%;
    height: 380px;
}

.cBlockImg2{
    display: block;
    width: 100%;
    text-align: center;
}

.cc{
    width: 100%;
    display:block;
}
.cc view:nth-of-type(3),view:nth-of-type(6){
    background: url(http://139.199.166.102/images/img/caseBack01.png) top left no-repeat;
    background-size: 100% 80%;
}
.cc view:nth-of-type(4){
    background: url(http://139.199.166.102/images/img/caseBack02.png) top left no-repeat;
    background-size: 100% auto;
}